<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.breezil.chatty.Activity.ui.RegisterActivity"
    android:background="@drawable/back_ground_animate"
    android:id="@+id/myRegisterBackground">


    <EditText
        android:id="@+id/regUsernametext"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_above="@+id/regEmailtext"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:ems="10"
        android:paddingStart="20dp"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:hint="@string/username"
        android:drawableLeft="@drawable/ic_account_circle_black_24dp"
        android:drawablePadding="20dp"
        android:inputType="textPersonName"
        android:background="@drawable/white_text_background"
        />

    <EditText
        android:id="@+id/regEmailtext"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/regPasswordtext"
        android:layout_alignEnd="@+id/regUsernametext"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:ems="10"
        android:hint="@string/enter_email"
        android:drawableLeft="@drawable/ic_mail_outline_black_24dp"
        android:drawablePadding="20dp"
        android:inputType="textEmailAddress"
        android:paddingStart="20dp"
        android:background="@drawable/white_text_background"/>

    <EditText
        android:id="@+id/regPasswordtext"
        android:layout_width="378dp"
        android:layout_height="50dp"
        android:layout_above="@+id/regRegBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:ems="10"
        android:hint="@string/enter_password"
        android:paddingStart="20dp"
        android:drawableStart="@drawable/ic_lock_outline_black_24dp"
        android:drawablePadding="20dp"
        android:inputType="textPassword"
        android:background="@drawable/white_text_background"/>

    <Button
        android:id="@+id/regRegBtn"
        android:layout_width="378dp"
        android:layout_height="50dp"
        android:text="@string/create_account"
        android:textColor="#FFFFFF"
        android:backgroundTint="@color/colorPrimary"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        tools:layout_editor_absoluteY="343dp"
        android:layout_marginBottom="132dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_background"
        android:elevation="8dp"
        />


    <TextView
        android:id="@+id/gotoSignInText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif"
        android:text="@string/sign_in"
        android:textColor="@color/colorWhite"
        android:textSize="20dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="97dp"
        android:src="@drawable/chatty" />
    <ProgressBar
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/registerProgress"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="170dp"
        android:layout_below="@id/regPasswordtext"
        android:visibility="invisible"/>
</RelativeLayout>
