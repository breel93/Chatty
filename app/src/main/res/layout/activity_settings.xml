<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.breezil.chatty.Activity.SettingsActivity">

    <!--<include layout="@layout/chatty_app_bar" android:id="@+id/settingBar"/>-->

    <RelativeLayout
        android:id="@+id/userInfoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="33dp"
        android:layout_marginBottom="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/settingUserImage"
            android:layout_width="120sp"
            android:layout_height="120sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/default_avatar" />

        <TextView
            android:id="@+id/settingUserNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/settingUserImage"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:text="User Name"
            android:textSize="25sp" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="0dp"
        android:layout_below="@id/userInfoLayout"
        android:weightSum="10"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:id="@+id/accountSettings">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_weight="3"
            android:src="@drawable/ic_account_settings_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="7"
            android:text="Account Settings"
            android:textSize="22dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_below="@id/accountSettings"
        android:id="@+id/chatSettings"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:weightSum="10">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_weight="3"
            android:src="@drawable/ic_account_settings_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="7"
            android:text="Account Settings"
            android:textSize="22dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:id="@+id/notificationSettings"
        android:layout_below="@id/chatSettings"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:weightSum="10">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_weight="3"
            android:src="@drawable/ic_account_settings_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="7"
            android:text="Account Settings"
            android:textSize="22dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:id="@+id/helpSettings"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:layout_below="@id/notificationSettings"
        android:weightSum="10">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_weight="3"
            android:src="@drawable/ic_account_settings_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="7"
            android:text="Account Settings"
            android:textSize="22dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:id="@+id/shareSettings"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:layout_below="@id/helpSettings"
        android:weightSum="10">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_weight="3"
            android:src="@drawable/ic_account_settings_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="7"
            android:text="Account Settings"
            android:textSize="22dp" />

    </LinearLayout>



    <TextView
        android:id="@+id/logOutText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="57dp"
        android:text="Log Out"
        android:textColor="#FF0000"
        android:textSize="20dp" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/relLayoutButBar"
        android:layout_alignParentBottom="true">

        <android.support.design.widget.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bottomNavView_Bar"
            android:background="@drawable/greyborderbottom"
            app:menu="@menu/bottom_nav_menu"
            >

        </android.support.design.widget.BottomNavigationView>
    </RelativeLayout>

</RelativeLayout>
