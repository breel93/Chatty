<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#10e9dfdf"
    tools:context=".Activity.ui.Single_MessageImage_Activity">

    <include layout="@layout/chatty_app_bar" android:id="@+id/singleImageBar"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
        android:src="@drawable/default_avatar"
        android:layout_marginStart="10dp"
        android:id="@+id/single_message_image"
        android:layout_marginEnd="10dp"
        android:transitionName="imgtransition"/>


</RelativeLayout>