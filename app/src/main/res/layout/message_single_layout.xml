<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:id="@+id/messageSingleLayout">


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/default_avatar"
        android:layout_marginStart="17dp"
        android:layout_marginTop="23dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/messageSingleProfileImg" />

    <TextView
        android:id="@+id/messageSingleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/messageSingleProfileImg"
        android:layout_marginStart="23dp"
        android:layout_toEndOf="@+id/messageSingleProfileImg"
        android:background="@drawable/message_text_background"
        android:padding="12dp"
        android:text="TextView"
        android:textColor="@color/colorWhite" />

</RelativeLayout>