<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.breezil.chatty.Activity.ChatActivity"
    android:background="@drawable/chatbackground"
    >

    <include layout="@layout/chatty_app_bar" android:id="@+id/userChatbar"/>
    
    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout"
        android:layout_below="@+id/userChatbar"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:id="@+id/swipeMessage">
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/messageList"
            android:layout_marginBottom="20dp"
            >

        </android.support.v7.widget.RecyclerView>

    </android.support.v4.widget.SwipeRefreshLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#FFFAF0"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="5dp"
        android:weightSum="10"
        android:id="@+id/linearLayout">

        <android.support.design.widget.FloatingActionButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:id="@+id/userchatAddBtn"
            android:layout_marginBottom="2dp"
            app:backgroundTint="@color/colorGrey"
            android:src="@drawable/ic_attach_file_black_24dp"
            android:layout_weight="2"/>

        <EditText

            android:id="@+id/userChatText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:elevation="3dp"
            android:layout_marginStart="5dp"
            android:ems="10"
            android:paddingStart="10dp"
            android:background="@drawable/btn_background"
            android:hint="@string/type_message"
            android:inputType="textMultiLine" />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="2dp"
            app:backgroundTint="@color/colorPrimary"
            android:src="@drawable/ic_near_me_black_24dp"
            android:id="@+id/userChatsend"
            android:layout_weight="1" />

    </LinearLayout>

</RelativeLayout>
